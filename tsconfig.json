{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",

    "paths": {
      "@/*": ["./src/*", "./dist/*", ""],

      "pages/*": ["./src/pages/*"],
      "services/*": ["./src/services/*"],
      "models/*": ["./src/models/*"],
      "assets/*": ["./src/assets/*"],
      "components/*": ["./src/components/*"],
      "store/*": ["./src/store/*"],
      "utils/*": ["./src/utils/*"],
      "hooks/*": ["./src/hooks/*"]
    },
  },
  "esModuleInterop": true,
  "include": ["src"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "exclude": ["node_modules"]
}
